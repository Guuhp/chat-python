JanelaGerenciador:
  Ip:
  Home:
  CameraClick:
  SeePhoto:

<Ip>:
  name:"ip"
  AnchorLayout:
    TextInput:
      id:inp_ip
      hint_text:"insira o numero do Ip do servi√ßo backend"
      size_hint_y: None
      height: '48dp'
  BoxLayout:
    cols:1
    Button:
      text: "Entrar"
      on_press:app.ip()
      on_release:app.root.current='home'
      size_hint_y: None
      height: '48dp' 

<Home>:
  name:"home"
  BoxLayout:
    orientation: 'vertical'
    cols:1
    AsyncImage:
      id:imguser 
      source:''
      width: 100
      allow_stretch: True
    Button:
      text: "Enviar Foto"
      on_release:app.root.current='camera'
      size_hint_y: None
      height: '48dp'
    Button:
      id:get_photo
      text:'Ver Mensagens'
      on_release: app.get_message()
      size_hint_y: None
      height: '48dp'
    TextInput:
      id:inpt_codigo_room
      hint_text:"Numero da Sala"
      size_hint_y: None
      height: '48dp'
    Label:
      id:idsala
      text: 
      size_hint_y: None
      height: '48dp'
    Button:
      id:btn_join_room
      text: "Entrar Na Sala"
      on_press:app.join_room()
      size_hint_y: None
      height: '48dp'
    Button:
      id:btn_create_room
      text: "Criar Sala"
      on_press: app.new_conversation()
      size_hint_y: None
      height: '48dp'


<CameraClick>:
  name:"camera"
  BoxLayout:
    orientation: 'vertical'
    Camera:
      id:camera
      resolution: (640,480)
      play: False
    BoxLayout:
      orientation: 'vertical'
      Camera:
      Button:
        text: 'Tirar Foto'
        size_hint_y: None
        height: '48dp'
        on_press: app.capture()
        on_release: app.root.current='verfoto'
      Button:
        text: 'Voltar'
        size_hint_y: None
        height: '48dp'
        on_release: app.root.current='home'

<SeePhoto>:
  name:"verfoto"
  BoxLayout:
    orientation: 'vertical'
    AsyncImage:
      id:imguser 
      source:''
      width: 100
      allow_stretch: True
    Button:
      text: 'Enviar Foto'
      size_hint_y: None
      height: '48dp'
      on_release: app.root.current='home'
    Button:
      text: 'Tirar Outra Foto'
      size_hint_y: None
      height: '48dp'
      on_release: app.root.current='camera'

